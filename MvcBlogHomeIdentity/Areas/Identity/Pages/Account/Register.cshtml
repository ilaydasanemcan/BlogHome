@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<h1>@ViewData["Title"]</h1>

<h2>Create a new account.</h2>
<hr />
<form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post" >
    <div class="row g-2 bg-warning bg-opacity-10">
        <div class="col-md">
            
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-floating">
                <input asp-for="Input.FirstName" class="form-control" autocomplete="firstname" aria-required="true" />
                <label asp-for="Input.FirstName"></label>
                <span asp-validation-for="Input.FirstName" class="text-danger"></span>
            </div>
            &nbsp;
            <div class="form-floating">
                <input asp-for="Input.LastName" class="form-control" autocomplete="lastname" aria-required="true" />
                <label asp-for="Input.LastName"></label>
                <span asp-validation-for="Input.LastName" class="text-danger"></span>
            </div>
            &nbsp;
            <div class="form-floating">
                <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" />
                <label asp-for="Input.Email"></label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            &nbsp;
            <div class="form-label">
                <label asp-for="Input.PhotoPath"></label>
                <input asp-for="Input.PhotoPath" type="file" class="form-control" id="inputGroupFile04" aria-describedby="inputGroupFileAddon04" aria-label="Upload">
            </div>
        </div>
        <div class="col-md">
            <div class="form-floating">
                <input asp-for="Input.PhoneNumber" class="form-control" autocomplete="phonenumber" aria-required="true" />
                <label asp-for="Input.PhoneNumber"></label>
                <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
            </div>
            &nbsp;
            <div class="form-floating">
                <input asp-for="Input.Password" type="password" class="form-control" autocomplete="new-password" aria-required="true" />
                <label asp-for="Input.Password"></label>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            &nbsp;
            <div class="form-floating">
                <input asp-for="Input.ConfirmPassword" type="password" class="form-control" autocomplete="new-password" aria-required="true" />
                <label asp-for="Input.ConfirmPassword"></label>
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            &nbsp;
            <div class="form-floating">
                <input asp-for="Input.Description" class="form-control" autocomplete="Description" aria-required="true" />
                <label asp-for="Input.Description"></label>
                <span asp-validation-for="Input.Description" class="text-danger"></span>
            </div>
            &nbsp;
        </div>
        <button id="registerSubmit" type="submit" class="btn btn-outline-warning">Register</button>
    </div>
    
</form>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

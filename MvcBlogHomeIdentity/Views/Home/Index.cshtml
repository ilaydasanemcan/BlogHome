@using Microsoft.AspNetCore.Identity
@using MvcBlogHomeIdentity.Areas.Identity.Data
@model HomeIndexVM
@{
    ViewData["Title"] = "Home Page";
}

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<form>
    <div class="bg-warning">
        <h1 class="display-3">Always Search</h1>
        <h1 class="display-6">Discover stories, thinking, and expertise from writers on any topic.</h1>
    </div>
</form>
<div class="container">
    <ul class="navbar-nav flex-grow-1">
        <br />
        <br />
        <p style="text-align:left; padding-right:150px; font-weight:bold; font-size:20px">
            <a style="color:black">Top Trends</a>
            <div class="row">
                @foreach (var item in Model.Articles)
                {
                    <div class="col-md-6">
                        <div class="card">
                            <div class="card-body">
                                <h5 class="card-title">@item.Name</h5>
                                @if (item.Context.Length >= 200)
                                {
                                    <p class="card-text">@item.Context.Substring(0, 200) ...</p>
                                }
                                else
                                {
                                    <p class="card-text">@item.Context</p>
                                }
                                <a href="" class="btn btn-warning">Go To Article</a>
                                <div class="card-body text-muted">
                                    @if (!SignInManager.IsSignedIn(User))
                                    {
                                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-star" viewBox="0 0 16 16">
                                            <path d="M2.866 14.85c-.078.444.36.791.746.593l4.39-2.256 4.389 2.256c.386.198.824-.149.746-.592l-.83-4.73 3.522-3.356c.33-.314.16-.888-.282-.95l-4.898-.696L8.465.792a.513.513 0 0 0-.927 0L5.354 5.12l-4.898.696c-.441.062-.612.636-.283.95l3.523 3.356-.83 4.73zm4.905-2.767-3.686 1.894.694-3.957a.565.565 0 0 0-.163-.505L1.71 6.745l4.052-.576a.525.525 0 0 0 .393-.288L8 2.223l1.847 3.658a.525.525 0 0 0 .393.288l4.052.575-2.906 2.77a.565.565 0 0 0-.163.506l.694 3.957-3.686-1.894a.503.503 0 0 0-.461 0z" />
                                        </svg>
                                        <p class="card-text">Like : @item.Like</p>
                                    }
                                    else
                                    {
                                        <form asp-action="like" method="post">
                                            <button type="button" class=" btn btn-warning" f>
                                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-star" viewBox="0 0 16 16">
                                                    <path d="M2.866 14.85c-.078.444.36.791.746.593l4.39-2.256 4.389 2.256c.386.198.824-.149.746-.592l-.83-4.73 3.522-3.356c.33-.314.16-.888-.282-.95l-4.898-.696L8.465.792a.513.513 0 0 0-.927 0L5.354 5.12l-4.898.696c-.441.062-.612.636-.283.95l3.523 3.356-.83 4.73zm4.905-2.767-3.686 1.894.694-3.957a.565.565 0 0 0-.163-.505L1.71 6.745l4.052-.576a.525.525 0 0 0 .393-.288L8 2.223l1.847 3.658a.525.525 0 0 0 .393.288l4.052.575-2.906 2.77a.565.565 0 0 0-.163.506l.694 3.957-3.686-1.894a.503.503 0 0 0-.461 0z" />
                                                </svg>
                                            </button>
                                        </form>
                                    }
                                </div>
                            </div>
                        </div>
                        <br />
                    </div>
                    <br/>
                }
            </div>
        </p>
    </ul>
</div>

    
